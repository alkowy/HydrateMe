<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <capability android:name="actions.intent.OPEN_APP_FEATURE">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.azmarzly.hydrateme.MainActivity"
            android:targetPackage="com.azmarzly.hydrateme">
            <parameter
                android:name="feature"
                android:key="hydrate me" />
        </intent>
    </capability>

    <shortcut
        android:shortcutId="ID_ONE"
        android:shortcutLongLabel="@string/app_name"
        android:shortcutShortLabel="@string/app_name">
        <capability-binding android:key="actions.intent.OPEN_APP_FEATURE">
            <parameter-binding
                android:key="feature"
                android:value="hydrate me" />
        </capability-binding>
    </shortcut>
</shortcuts>